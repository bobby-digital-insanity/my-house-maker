// this file is used to configure the devcontainer for the project
{
  "name": "my-house-maker",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "remoteUser": "node",
  "forwardPorts": [8080],
  "secrets": {
    "LAUNCHDARKLY_CLIENT_SIDE_ID": {
      "description": "LaunchDarkly SDK credentials",
      "documentationUrl": "https://launchdarkly.com/docs/home/account/environment/keys#view-sdk-credentials"
      }
  },
  "remoteEnv": {
    "VITE_LAUNCHDARKLY_CLIENT_SIDE_ID": "${localEnv:LAUNCHDARKLY_CLIENT_SIDE_ID}",
    "VITE_SUPABASE_URL": "${localEnv:VITE_SUPABASE_URL}",
    "VITE_SUPABASE_PUBLISHABLE_KEY": "${localEnv:VITE_SUPABASE_PUBLISHABLE_KEY}"
  },
  "portsAttributes": {
    "8080": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "npm install",
  "postStartCommand": "bash .devcontainer/setup-env.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "files.insertFinalNewline": true
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}


// this file is used to configure the devcontainer for the project
{
  "name": "my-house-maker",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "remoteUser": "node",
  "forwardPorts": [8080],
  "secrets": {
  "NAME_OF_SECRET_1": {
    "description": "This is the description of the secret.",
    "documentationUrl": "https://example.com/link/to/info"
    }
  },
  "remoteEnv": {
    "VITE_LAUNCHDARKLY_CLIENT_SIDE_ID": "${localEnv:VITE_LAUNCHDARKLY_CLIENT_SIDE_ID}",
    "VITE_SUPABASE_URL": "${localEnv:VITE_SUPABASE_URL}",
    "VITE_SUPABASE_PUBLISHABLE_KEY": "${localEnv:VITE_SUPABASE_PUBLISHABLE_KEY}"
  },
  "portsAttributes": {
    "8080": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "npm install",
  "postStartCommand": "bash .devcontainer/setup-env.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "files.insertFinalNewline": true
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}

